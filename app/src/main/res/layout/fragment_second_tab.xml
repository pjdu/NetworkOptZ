<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_fragment_second_tab_current_position_lon_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经纬度:" />

    <TextView
        android:id="@+id/textView_fragment_second_tab_current_position_definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细地址:" />

    <TextView
        android:id="@+id/TextViewCurrentMarkerBaseStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前未点击小区" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView_fragment_second_tab_bmapview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/btn_fragment_second_tab_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_location" />


        <Button
            android:id="@+id/btn_fragment_second_tab_change_map_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/checkBox_fragment_second_tab_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="60dip"
            android:checked="false"
            android:text="路况图" />

        <CheckBox
            android:id="@+id/checkbox_fragment_second_tab_baidu_heat_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="90dip"
            android:checked="false"
            android:text="热力图" />

        <CheckBox
            android:id="@+id/checkbox_fragment_second_tab_LTE_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="120dip"
            android:checked="false"
            android:text="4G小区" />

    </RelativeLayout>


</LinearLayout>

