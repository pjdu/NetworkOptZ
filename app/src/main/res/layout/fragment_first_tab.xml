<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:id="@+id/toolbar_main"
                                               android:layout_width="match_parent"
                                               android:layout_height="?android:attr/actionBarSize"
                                               android:background="?android:attr/colorPrimary"
                                               android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                               app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                               app:title="优易"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/rectangles_with_corners"
                    android:divider="@drawable/divider_line"
                    android:orientation="vertical"
                    android:showDividers="middle"> <!-- 运营商版块 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">   <!-- 运营商版块1 -->

                        <TextView
                            android:id="@+id/textView_MainActivity_Operator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="中国移动"
                            android:textColor="#00ff00"/>

                    </RelativeLayout>  <!-- 运营商版块1 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">   <!-- 运营商版块2 -->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:text="IMSI:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_IMSI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="123456789012345"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IMEI:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_IMEI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="123456789012345"/>

                        </LinearLayout>

                    </LinearLayout>  <!-- 运营商版块2 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">   <!-- 运营商版块3 -->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:text="手机型号:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_UEModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Mi-MIX2s"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="安卓版本:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_AndroidVersion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="8.1.0"/>

                        </LinearLayout>
                    </LinearLayout>  <!-- 运营商版块3 -->

                </LinearLayout> <!-- 运营商版块 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/rectangles_with_corners"
                    android:divider="@drawable/divider_line"
                    android:orientation="vertical"
                    android:showDividers="middle"> <!-- 当前位置版块 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"> <!-- 当前位置版块1 -->

                        <TextView
                            android:id="@+id/textView_MainActivity_CurrentLocName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="湖北省武汉市东西湖区123路456号"
                            android:textColor="#00ff00"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">   <!-- 当前位置版块2 -->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:text="经度:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_Longitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="123.45678"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="纬度:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_Latitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="12.34567"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高度:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_Altitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="18"/>

                        </LinearLayout>

                    </LinearLayout> <!-- 当前位置版块2 -->

                </LinearLayout><!-- 当前位置版块 -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/rectangles_with_corners"
                    android:divider="@drawable/divider_line"
                    android:orientation="vertical"
                    android:showDividers="middle"> <!-- 当前小区版块 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"><!-- 当前小区版块1 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="东西湖区XXX大楼-HLH-1"
                            android:textColor="#00ff00"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">   <!-- 当前小区版块2 -->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:text="TAC:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_TAC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="12345"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PCI:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_PCI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="129"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CGI:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_CGI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="1234567-129"/>

                        </LinearLayout>

                    </LinearLayout> <!-- 当前小区版块2 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">   <!-- 当前小区版块3 -->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:text="频点:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_earFcn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="38950"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Band:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_Band"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="40(TDD)"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="频率:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_Frequency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="2330"/>

                        </LinearLayout>

                    </LinearLayout> <!-- 当前小区版块3 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">   <!-- 当前小区版块4 -->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:text="RSRP:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_RSRP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="-73"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RSRQ:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_RSRQ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="-4"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SINR:"/>

                            <TextView
                                android:id="@+id/textView_MainActivity_SINR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="9.0"/>

                        </LinearLayout>

                    </LinearLayout> <!-- 当前小区版块4 -->

                </LinearLayout><!-- 当前小区版块 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/rectangles_with_corners"
                    android:divider="@drawable/divider_line"
                    android:orientation="vertical"
                    android:showDividers="middle">  <!-- 当前信号强度版块 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信号强度"/>
                    </RelativeLayout>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_MainActivity_lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>

                </LinearLayout> <!-- 当前信号强度版块 -->


            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>