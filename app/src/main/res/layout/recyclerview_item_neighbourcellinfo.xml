<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/recyclerview_item_neighbourcellinfo_type"
        android:gravity="center"
        android:background="@drawable/recangle"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/recyclerview_item_neighbourcellinfo_tac"
        android:gravity="center"
        android:background="@drawable/recangle"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/recyclerview_item_neighbourcellinfo_pci"
        android:gravity="center"
        android:background="@drawable/recangle"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/recyclerview_item_neighbourcellinfo_rsrp"
        android:gravity="center"
        android:background="@drawable/recangle"/>

</LinearLayout>